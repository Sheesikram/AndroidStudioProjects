<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".hostelManagementSystem.AddStudent">

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="name"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter your Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firebasetask05recyclerview" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Reg."
        android:textSize="20sp"></TextView>
    <EditText
        android:id="@+id/registrationNumberEditText"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your reg num"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firebasetaskedittextname" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Batch"
        android:textSize="20sp"></TextView>
    <EditText
        android:id="@+id/batchEditText"
        android:layout_width="347dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Enter your Batch."
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firebasetaskedittextsection" />
    <TextView
        android:layout_width="15dp"
        android:layout_height="5dp"
        android:text="Dept"
        android:textSize="20sp"></TextView>
    <EditText
        android:id="@+id/departmentEditText"
        android:layout_width="344dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your Dept"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firebasetaskedittextrollno" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Phone"
        android:textSize="20sp"></TextView>
    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Enter your Phone Number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"></EditText>
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Email"
        android:textSize="20sp"></TextView>
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"></EditText>


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

</androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/addbtn"
        android:layout_width="329dp"
        android:layout_height="58dp"
        android:layout_marginBottom="0dp"
        android:onClick="Add_Record"
        android:text="ADD"


        tools:ignore="VisualLintButtonSize" />


</LinearLayout>
